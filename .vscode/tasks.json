                "isBuildCommand": true,
                "args": [
                    "-g",
                    "-std=c++11",
                    "main.cpp",
                    "-o", "Builds/Mac_Build/engine"
                ]
            }
        ]
    },
    "windows": {
        "tasks": [
            {
                "taskName": "Build",
                "suppressTaskName": true,
